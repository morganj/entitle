group UserDAO;

findByEmail(email) ::= <<
    SELECT firstName,
           lastName,
           email
    FROM   user
    WHERE email = :email
>>

addUser() ::=<<
INSERT INTO user (
    firstName,
    lastName,
    email
) VALUES (
    :firstName,
    :lastName,
    :email
);
>>

removeUser() ::=<<
DELETE FROM user
WHERE email = :email
>>
